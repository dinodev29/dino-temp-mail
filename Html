<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dino Temp Mail</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    button { padding: 10px 15px; margin: 5px; cursor: pointer; }
    #email, #inbox { margin-top: 15px; }
    pre { background: #f4f4f4; padding: 10px; }
  </style>
</head>
<body>

<h1>Dino Temp Mail Frontend</h1>

<button id="generateBtn">Generate Temp Email</button>
<button id="sendEmailBtn">Send Test Email</button>
<button id="checkInboxBtn">Check Inbox</button>

<div id="email"><strong>Generated Email:</strong> <span id="tempEmail">None</span></div>
<div id="inbox"><strong>Inbox:</strong><pre id="messages">No messages yet.</pre></div>

<script>
const backendURL = "https://dino-temp-mail.onrender.com";
let currentEmail = "";

// Generate a temp email
document.getElementById("generateBtn").addEventListener("click", async () => {
  try {
    const res = await fetch(`${backendURL}/generate`);
    const data = await res.json();
    currentEmail = data.email;
    document.getElementById("tempEmail").textContent = currentEmail;
    document.getElementById("messages").textContent = "No messages yet.";
    console.log("Generated email:", currentEmail);
  } catch (err) {
    console.error("Error generating email:", err);
  }
});

// Send a test email to current temp email
document.getElementById("sendEmailBtn").addEventListener("click", async () => {
  if (!currentEmail) {
    alert("Generate a temp email first!");
    return;
  }

  try {
    const res = await fetch(`${backendURL}/send-mail`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        to: currentEmail,
        subject: "Test Email from Dino Temp Mail",
        message: "Hello! This is a test message."
      })
    });

    const data = await res.json();
    alert(data.status || "Test email sent!");
    console.log("Send email response:", data);
  } catch (err) {
    console.error("Error sending test email:", err);
  }
});

// Check inbox for current email
document.getElementById("checkInboxBtn").addEventListener("click", async () => {
  if (!currentEmail) {
    alert("Generate a temp email first!");
    return;
  }

  try {
    const res = await fetch(`${backendURL}/inbox?email=${currentEmail}`);
    const data = await res.json();
    document.getElementById("messages").textContent = JSON.stringify(data, null, 2);
    console.log("Inbox messages:", data);
  } catch (err) {
    console.error("Error fetching inbox:", err);
  }
});
</script>

</body>
</html>
